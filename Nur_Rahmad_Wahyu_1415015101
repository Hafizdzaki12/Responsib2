 <?php 
echo "<fieldset>";
echo "<legend>Untuk No. 5, 6, 7, 8 Deklarasi Variabel Beserta Outputnya</legend>";
$txt = "Hello World!";
$p = 5;
$o = 10.5;

echo "I Say $txt! >>>>>Untuk variabel di dalam echo <br>";
echo "I Say ".$txt."! >>>>>Untuk variabel diluar echo<br>";
echo "Output dari P = ".$p."<br>";
echo "Output dari O = " .$o."<br>";
echo "Hasil Perkalian Antara O dan P ";
echo $p*$o;
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>9.Mengetahui Panjang String </legend>";
echo strlen ("Hello World !!!");
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>10.Menghitung Jumlah Kata Pada Kalimat</legend>";
echo str_word_count("Hello World !!!");
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>11.Membalikan String </legend>";
echo strrev("Hello World !!!");
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>12.Pencarian Dalam String</legend>";
echo strpos("Hello World !!!","World");
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>13.Mengganti Text</legend>";
echo "Sebelum Diganti = Hello World !!! <br>";
echo str_replace("World","Dolly","Hello World !!!");
echo " Sesudah diganti";
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>14.Fungsi Dasar</legend>";
function tulispsn() {
	echo "Terlalu Banyak Hello World !!!";
}
tulispsn();
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>15.Fungsi Dasar Dengan Argumen</legend>";
function familyName($fname) {
	echo "$fname Refsnes.";
	echo "<br>";
}
familyName("Janji");
familyName("Hege");
familyName("Stle");
familyName("Kai Jim");
familyName("Borge");
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>16.Fungsi Dengan lebih dari satu Argumen </legend>";
function familyName($fname, $year) {
    echo "$fname Refsnes. Born in $year <br>";
}
familyName("Hege", "1975");
familyName("Stale", "1978");
familyName("Kai Jim", "1983");

echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>17.Fungsi Dengan Nilai Default Pada Argumen</legend>";
function setHeight($minheight = 50) {
	echo "Tingginya Adalah  =  $minheight <br>";
}

setHeight (350);
setHeight (); //will use the default value of 50
setHeight (135);
setHeight (80);
echo "</fieldset>";
echo "<br>";

echo "<fieldset>";
echo "<legend>18.Fungsi yang mengembalikan nilai</legend>";
function tambah($x, $y) {
	$m = $x + $y;
	return $m;
}

echo "5 + 10 = ".tambah(5,10)."<br>";
echo "7 + 13 = ".tambah(7,13)."<br>";
echo "2 + 4= ".tambah(2,4)."<br>";

  ?>
