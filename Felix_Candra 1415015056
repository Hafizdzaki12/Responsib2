<html>
<body>
<!- 1. Output dengan PHP -->
<?php
echo "Hello World";
?>
<br>

<!- 2. PHP dengan HTML -->
<?php
echo "Hello World!";
?>
<br>

<!- 3. Komentar pada PHP -->
<?php
// This is a single-line comment
# This is also a single-line comment
/*
This is a multiple-lines comment block
that spans over multiple
lines
*/
// You can also use comments to leave out parts of a code line
$x = 5 /* + 15 */ + 5;
echo $x;
?>
<br>

<!- 4. PHP Case Sensitive -->
<?php
$color = "red";
echo "My car is " . $color . "<br>";
echo "My house is " . $COLOR . "<br>";
echo "My boat is " . $coLOR . "<br>";
?>
<br>

<!- 5. Deklarasi Variabel -->
<?php
$txt = "Hello world!";
$x = 5;
$y = 10.5;
?>
<br>

<!- 6. Output Variabel 1 -->
<?php
$txt = "W3Schools.com";
echo "I love $txt!";
?>
<br>

<!- 7. Output Variabel 2 -->
<?php
$txt = "W3Schools.com";
echo "I love " . $txt . "!";
?>
<br>

<!- 8. Output Variabel 3 dengan operasi aritmatika -->
<?php
$x = 5;
$y = 4;
echo $x + $y;
?>
<br>

<!- 9. Mengetahui panjang string -->
<?php
echo strlen("Hello world!"); // outputs 12
?>
<br>

<!- 10. Menghitung jumlah kata pada kalimat -->
<?php
echo str_word_count("Hello world!"); // outputs 2
?>
<br>

<!- 11. Membalikan String -->
<?php
echo strrev("Hello world!"); // outputs !dlrow olleH
?>
<br>

<!- 12. Pencarian dalam string(Posisi) -->
<?php
echo strpos("Hello world!", "world"); // outputs 6
?>
<br>

<!- 13. Mengganti Text -->
<?php
echo str_replace("world", "Dolly", "Hello world!"); // outputs Hello Dolly!
?>
<br>

<!- 14. Fungsi(dasar) -->
<?php
function writeMsg() {
    echo "Hello world!";
}
writeMsg(); // call the function
?>
<br>

<!- 15. Fungsi dengan argumen -->
<?php
function familyName($fname) {
    echo "$fname Refsnes.<br>";
}
familyName("Jani");
familyName("Hege");
familyName("Stale");
familyName("Kai Jim");
familyName("Borge");
?>
<br>

<!- 16. Fungsi dengan lebih dari satu argumen -->
<?php
function familyName($fname, $year) {
    echo "$fname Refsnes. Born in $year <br>";
}
familyName("Hege", "1975");
familyName("Stale", "1978");
familyName("Kai Jim", "1983");
?>
<br>

<!- 17. Fungsi dengan nilai default pada argumen -->
<?php
function setHeight($minheight = 50) {
    echo "The height is : $minheight <br>";
}
setHeight(350);
setHeight(); // will use the default value of 50
setHeight(135);
setHeight(80);
?>
<br>

<!- 18. Fungsi yang mengembalikan nilai -->
<?php
function sum($x, $y) {
    $z = $x + $y;
    return $z;
}
echo "5 + 10 = " . sum(5, 10) . "<br>";
echo "7 + 13 = " . sum(7, 13) . "<br>";
echo "2 + 4 = " . sum(2, 4);
?>

</body>
</html>
